<div class="mainTitle">Contact</div>

<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 profile">
	<div class="row" style="margin-top: 20px;">
		<a href="nathaniel.schier@gmail.com" class="col-sm-4 col-sm-offset-1 col-xs-10 col-xs-offset-1 contact-box current">Email Webmaster</a>
		<a href="dbs02011@mymail.pomona.edu" class="col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1 contact-box">Email President</a>
	</div>
	<div class="row" style="margin-bottom: 20px;">
		<a href="jaredmathismmb@gmail.com" class="col-sm-4 col-sm-offset-1 col-xs-10 col-xs-offset-1 contact-box">Email Board of Directors</a>
		<a href="kzw02011@mymail.pomona.edu" class="col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1 contact-box">General Questions</a>
	</div>
	<div class="row">
		<%= form_tag 'contact_send' do %>
			<%= hidden_field_tag 'email_to' %>
			<div class="col-sm-4 col-sm-offset-1 col-xs-10 col-xs-offset-1" style="padding: 0;">
				<%= text_field_tag 'first_name', '', required: 'required', autocomplete: :off, placeholder: 'First Name', class: 'form-control' %>
			</div>
			<div class="col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1" style="padding: 0;">
				<%= text_field_tag 'last_name', '', required: 'required', autocomplete: :off, placeholder: 'Last Name', class: 'form-control' %>
			</div>
			<div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1" style="padding: 0;">
				<%= text_field_tag 'email_from', '', required: 'required', autocomplete: :off, placeholder: 'Email', class: 'form-control' %>
			</div>
			<div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1" style="padding: 0;">
				<%= text_area_tag 'message', '', required: 'required', autocomplete: :off, placeholder: 'Message', class: 'form-control' %>
			</div>
			<div class="col-xs-11" style="padding: 0;">
				<%= submit_tag 'Send', class: 'button pull-right' %>
			</div>
		<% end %>
	</div>
</div>
