	</nav>
	<div class="loginIndicator">
	<% if signed_in? %>
		<%= "WELCOME #{current_member.first_name.upcase}!" %>
	<% else  %>
		<%= link_to 'SIGN IN', main_app.signin_path, id: 'sessionText' %>
	<% end  %>
	</div> 
</header>