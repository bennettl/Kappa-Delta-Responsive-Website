<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
	<% # Include application and controller specific stylesheets/javascripts %>
	<%= stylesheet_link_tag    "application", params[:controller] ,media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "https://js.stripe.com/v2/", params[:controller] ,"data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
	<%= tag :meta, name: 'strip_key', content: STRIPE_PUBLIC_KEY %>
	<% # Setting the viewport for mobile devices %>
	<%= tag :meta, name: 'viewport', content: "width=device-width, initial-scale=1.0" %>
</head>
<body>
	<%= render 'layouts/mobileNav' %>
	<div class="siteWrap">
	  	<%= render 'layouts/header' %>
		<% flash.each do |key, value| %>
			<%= content_tag :div, value, class:"alert alert-#{key}" %>
		<% end %>
		<div class="container">
			<%= yield %>
		</div>
	  	<%= render 'layouts/footer' %>
		<div style="clear: both; padding-top: 20px;">
			 <!-- # debug params %> -->
		</div>
	</div> <!-- /.siteWrap -->
</body>
</html>