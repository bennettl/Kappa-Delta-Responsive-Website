<li class="event col-sm-6">
	<div class="listBody">
		<div class="dateBox">
			<div class="month"><%= event.start_time.strftime("%b") %></div>
			<div class="date"><%= event.start_time.strftime("%e") %></div>
		</div>
		<ul class="basicInfo">
			<li> 
				<div class="title"><%= link_to event.title, event %></div>
			</li>
			<li>
				<span class="glyphicon glyphicon-time"></span>
				<%= event.start_time.strftime("%l:%M %P") + " - " + event.end_time.strftime("%l:%M %P")%>
			</li>
			<li>
				<span class="glyphicon glyphicon-map-marker"></span>
				<%= event.location %>
			</li>
		</ul>
		<div class="description"><%= event.description %></div>
	</div>
</li>