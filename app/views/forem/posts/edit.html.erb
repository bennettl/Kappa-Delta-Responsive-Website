
<div class="profile col-xs-6 col-xs-offset-3">
	<%= render :partial => 'forem/forums/head', :locals => { :forum => @topic.forum } %>

	<div class="mainTitle"><%= t("forem.post.edit", :post => @post) %></div>

	<%= simple_form_for [forem, @topic.forum, @topic, @post] do |f| %>
	  <%= render :partial => "form", :locals => { :f => f } %>
	  <%= f.submit t("forem.post.buttons.edit"), :class => "button pull-right" %>
	<% end %>
</div>
