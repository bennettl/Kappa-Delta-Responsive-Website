<%= simple_form_for [forem, :admin, @category], html: { class: 'form-horizontal' } do |f| %>
	<div class="form-group">	
		<%= f.label 'Name', class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.input_field :name, class: 'form-control' %>
		</div>
	</div>
	<%= f.submit :class => "button pull-right" %>
<% end %>
