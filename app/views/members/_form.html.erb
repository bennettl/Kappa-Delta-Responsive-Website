<%= form_for @member, :html => { :multipart => true }  do |f| %>
  	<%= render 'shared/error_messages', object: f.object  %>
	<div id="memberProfile" class="col-xs-10 col-xs-offset-1">
		<div class="row">
			<!-- AVATAR  -->
			<div class="col-md-3">
				<%= f.label 'Avatar' %>
				<%= image_tag @member.avatar.url(:medium), id: "memberImg" %>
				<%= f.file_field :avatar %>
			</div>
			<!-- AVATAR  -->
			<!-- BASIC INFO  -->
			<div id="basicInfo" class="col-md-9">
				<div class="detailTitle">Basic Info</div>
				<div id="memberName" class="col-xs-12">
					<div class="col-md-4 col-sm-5">
						<span class="glyphicon glyphicon-user"></span>
						<%= f.label 'Name' %>
					</div>
					<div class="col-md-8 col-sm-7">
						<%= f.text_field :first_name, value: @member.first_name, autocomplete: :off, placeholder: 'John', required: "required", class: 'pull-left form-control', style: "margin: 0 10px 15px 0;" %>
						<%= f.text_field :last_name, value: @member.last_name, autocomplete: :off,  placeholder:'Smith', required: "required", class: 'pull-left form-control', style: "margin-bottom: 15px;" %>
					</div>
				</div>
				<div id="headline" class="group col-xs-12">
					<div class="col-md-4 col-sm-5">
						<span class="glyphicon glyphicon-pushpin"></span>
						<%= f.label 'Headline' %>						
					</div>
					<div class="col-md-8 col-sm-7">
						<%= f.text_area :headline, value: @member.headline, placeholder: 'Veteran Software Developer, Recent Graduate', class: 'form-control' %>
					</div>
				</div>
				<div class="group col-xs-12">
					<div class="col-md-4 col-sm-5">
						<span class="glyphicon glyphicon-calendar"></span>
						<%= f.label 'Class Year' %>
					</div>
					<div class="col-md-8 col-sm-7">
						<%= f.text_field :class_year, value: @member.class_year, autocomplete: :off, placeholder: '2014', required: "required", class: 'form-control' %> 
					</div>
				</div>
				<div class="group col-xs-12">
					<div class="col-md-4 col-sm-5">
						<span class="glyphicon glyphicon-pencil"></span>
						<%= f.label 'Major' %>
					</div>
					<div class="col-md-8 col-sm-7">
						<%= f.text_field :major, value: @member.major, autocomplete: :off, placeholder: 'Computer Science', required: "required", class: 'form-control'  %>
					</div>
				</div>
				<div class="group col-xs-12">
					<div class="col-md-4 col-sm-5">
						<span class="glyphicon glyphicon-globe"></span>
						<%= f.label 'Industry' %>
					</div>
					<div class="col-md-8 col-sm-7">
						<%= f.text_field :major, value: @member.industry, autocomplete: :off, placeholder: 'Software', class: 'form-control'  %>
					</div>
				</div>
				<div class="group col-xs-12">
					<div class="col-md-4 col-sm-5">
						<span class="glyphicon glyphicon-file"></span>
						<%= f.label 'Resume' %>
					</div>
					<div class="col-md-8 col-sm-7">
						<% if !@member.resume.blank? %>
							<%= link_to @member.resume.original_filename, @member.resume.url %>
						<% end %>
						<%= f.file_field :resume %>
					</div>
				</div>
			</div>
			<!-- BASIC INFO  -->
		</div>

		<div class="row">
			<!-- LOCATION -->
			<div id="location" class="col-md-6">
				<div class="detailTitle">
					<span class="glyphicon glyphicon-map-marker"></span>
					<span>Location</span>
				</div>
				<%
				label = f.label 'Address'
				input =  f.text_field :address, value: @member.address, autocomplete: :off, placeholder: '711 W. 27th Street', class: 'form-control' 
				%>
				<%= row label,input %>
				<%
				label = f.label 'State'
				input =   f.text_field :state, value: @member.state, autocomplete: :off, placeholder: 'CA', class: 'form-control'
				%>
				<%= row label,input %>
				<%
				label = f.label 'City'
				input =  f.text_field :city, value: @member.city, autocomplete: :off, placeholder: 'Los Angeles', required: "required", class: 'form-control'
				%>
				<%= row label,input %>
				<%
				label = f.label 'Zip'
				input = f.text_field :zip, value: @member.zip, autocomplete: :off, placeholder: '90007', class: 'form-control'
				%>
				<%= row label,input %>
			</div>
			<!-- LOCATION -->
			<!-- CONTACT  -->
			<div id="contact" class="col-md-6">
				<div class="detailTitle">						
					<span class="glyphicon glyphicon-phone"></span>
					<span>Contact</span>
				</div>
				<%
				label = f.label 'Phone'
				input = f.text_field :phone, value: @member.phone, autocomplete: :off, placeholder: '415-891-2051', class: 'form-control'
				%>
				<%= row label,input %>
					<%
				label = f.label 'Email'
				input = f.text_field :email, value: @member.email, autocomplete: :off, placeholder: 'john@gmail.com', required: "required", class: 'form-control'
				%>
				<%= row label,input %>
			</div>
			<!-- CONTACT  -->
		</div>
		<div class="row">
			<!-- ACCOUNT -->
			<div id="account" class="col-md-6">
				<div class="detailTitle">						
					<span class="glyphicon glyphicon-map-marker"></span>
					<span>Account</span>
				</div>
				<%
				label = f.label 'Username'
				input = f.text_field :user_name, autocomplete: :off, class: 'form-control', required: "required", readonly: true
				%>
				<%= row label,input %>
				<%
				label = f.label 'New Password'
				input = f.password_field :password, autocomplete: :off, class: 'form-control'
				%>
				<%= row label,input %>
				<%
				label = f.label 'Confirm Password'
				input = f.password_field :password_confirmation, autocomplete: :off, class: 'form-control'
				%>
				<%= row label,input %>
			</div>
			<!-- ACCOUNT -->
			<!--  SOCIAL -->
			<div id="social" class="col-md-6">
				<div class="detailTitle">
					<span class="glyphicon glyphicon-comment"></span>
					<span>Social</span>
				</div>
				<div class="col-xs-12 group">
					<div class="col-xs-3 col-sm-2">
						<%= image_tag('social/fb.png', class: 'socialIcon small') %>
					</div>
					<div class="col-xs-9 col-sm-10">
						<%= f.text_field :url_facebook, value: @member.url_facebook, autocomplete: :off, placeholder: 'http://www.facebook.com/john', class: 'form-control' %>
					</div>
				</div>
				<div class="col-xs-12 group">
					<div class="col-xs-3 col-sm-2">
						<%= image_tag('social/twitter.png', class: 'socialIcon small')%>
					</div>
					<div class="col-xs-9 col-sm-10">
						<%= f.text_field :url_twitter, value: @member.url_twitter, autocomplete: :off, placeholder: 'http://www.twitter.com/john', class: 'form-control' %>
					</div>
				</div>
				<div class="col-xs-12 group">
					<div class="col-xs-3 col-sm-2">
						<%= image_tag('social/li.png', class: 'socialIcon small') %>
					</div>
					<div class="col-xs-9 col-sm-10">
						<%= f.text_field :url_linkedIn, value: @member.url_linkedIn, autocomplete: :off, placeholder: 'http://www.linkedin.com/john', class: 'form-control' %>
					</div>
				</div>
			</div>
			<!--  SOCIAL -->
		</div>
		<div class="row">
			<!-- ADMIN -->			
			<div id="admin" class="group col-md-6">
				<div class="detailTitle">
					<span class="glyphicon glyphicon-stats"></span>
					<span>Admin</span>
				</div>
					<%
					label = f.label 'Type'
					input = f.select :member_type, [['Normal', 'normal'], ['Administrator', 'admin'], ['Super Administrator', 'super admin']], class: 'form-control', selected: @member.member_type
					%>
					<%= row label,input %>
					<%
					label = f.label 'Status'
					input = f.select :status, [['Member', 'member'], ['Officer', 'officer'], ['Board of Directors', 'bod',]], class: 'form-control', selected: @member.status 
					%>
					<%= row label,input %>
			</div>
			<!-- ADMIN -->
		</div>

		<div class="row col-xs-12">
			<div class="detailTitle">
				<span class="glyphicon glyphicon-align-left"></span>
				<span>Summary</span>
			</div>
			<div class="detailBody">
				<%= f.text_area :summary, value: @member.summary, placeholder: 'A little bit about me...', class: 'form-control' %>
			</div>
		</div>

		<div class="row col-xs-12" style="margin-top: 15px;">
			<%= back_button @member %>
			<% # Object is the filler text for submit button %>
			<%= f.submit object, class: 'button editMemberButton pull-right' %>
		</div>

	</div>
 	
<% end %>
