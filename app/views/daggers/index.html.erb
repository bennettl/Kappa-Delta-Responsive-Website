<div class="mainTitle">
	<% if is_admin? %>
		<div class="col-xs-12">
			<%= new_button 'New', new_dagger_path %>
		</div>
	<% end %>
	<div class="col-xs-12">
		<span>The Dagger</span>
	</div>
</div>
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Date</th>
			<th>Author</th>
			<th>File</th>
		</tr>
	</thead>
	<tbody>
		<%= render @daggers %>
	</tbody>
</table>