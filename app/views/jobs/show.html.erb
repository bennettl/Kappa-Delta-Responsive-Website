<%= back_button(jobs_path) %>
<div class="mainTitleContainer">
	<div class="mainTitle"><%= @job.title %></div>
	<%= link_to 'Remove', @job, method: :delete, class: :remove %>
</div>

<div id="basicInfo">
	<div class="detailTitle">Basic Info</div>
	<ul id="info" class="content">
		<li>
			<div>Posted By</div>
			<div><%= @job.member.first_name %></div>
		</li>
		<li>
			<div>Company</div>
			<div><%= @job.company %></div>
		</li>
		<li>
			<div>Industry</div>
			<div><%= @job.industry %></div>
		</li>
		<li>
			<div>Job Type</div>
			<div><%= @job.job_type %></div>
		</li>
		<li>
			<div>Location</div>
			<div><%= @job.location %></div>
		</li>
		<li>
			<div>Start Date</div>
			<div><%= @job.start_date %></div>
		</li>
		<li>
			<div>Deadline</div>
			<div><%= @job.deadline %></div>
		</li>
	</ul>
</div>

<div id="detailInfo">
	<div class="detailTitle">Description</div>
	<div class="content">
		<%= @job.description %>
	</div>

	<div class="detailTitle">Qualification</div>
	<div class="content">
		<%= @job.qualification %>
	</div>

	<div class="detailTitle">Compensation</div>
	<div class="content">
		<%= @job.compensation %>
	</div>

	<div class="detailTitle">How To Apply</div>
	<div class="content">
		<%= @job.how_to_apply %>
	</div>

</div>


