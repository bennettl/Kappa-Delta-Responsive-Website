<%= form_tag jobs_path, method: :get, id: :job_search do %>
	<div id="searchColumn" class="row">
		<%
			location 	= params[:location]
			industry 	= params[:industry]
			job_type 	= params[:job_type]
			deadline 	= params[:deadline]
			#sorting
			direction 	= params[:direction]
			sort_name 	= params[:sort]
		%>
		<%= hidden_field_tag "direction", direction %>
		<%= hidden_field_tag "sort_name", sort_name %>
		<div class="cell col-sm-2 col-sm-offset-4 col-xs-12"><%= search_column 'Location', 'location', location, '' %></div>
		<div class="cell col-sm-2 col-xs-12"><%= search_column 'Industry', 'industry', industry, '' %></div>
		<div class="cell col-sm-2 col-xs-12"><%= search_column 'Type', 'job_type', job_type, '' %></div>
		<div class="cell col-sm-2 col-xs-12"><%= search_column 'Deadline', 'deadline', deadline, 'datetimepicker' %></div>
	</div>
<% end %>
